// main.go
func main() {
    ctx := context.Background() // ok, –∫–æ—Ä–Ω–µ–≤–æ–π –∫–æ–Ω—Ç–µ–∫—Å—Ç

    // –ø–æ–∫–∞ –Ω–µ —É–≤–µ—Ä–µ–Ω, —á—Ç–æ –∑–∞ –∫–æ–Ω—Ç–µ–∫—Å—Ç –Ω—É–∂–µ–Ω –∑–¥–µ—Å—å ‚Äî –ø–æ—Å—Ç–∞–≤–∏–º TODO:
    result := fetchData(context.TODO()) // –≤–µ—Ä–Ω—ë–º—Å—è –ø–æ–∑–∂–µ –∏ —Ä–µ—à–∏–º

    fmt.Println(result)
